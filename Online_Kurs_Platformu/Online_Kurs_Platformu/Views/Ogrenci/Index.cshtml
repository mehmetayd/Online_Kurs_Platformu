@using Microsoft.AspNetCore.Http
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Düzce Üniversitesi Online Kurs Platformu</title>
   
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery/dist/jquery.min.js" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide|Sofia|Trirong">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
<div class="container yazılar">
    <div class="row">
      <div class="col-md-4 orta">
                @{
                    var ad = Context.Session.GetString("ad");
                    var soyad = Context.Session.GetString("soyad");
                    var mail = Context.Session.GetString("e-mail");
                    var numara = Context.Session.GetString("id");
                }
                <h3>Öğrenci Bilgileri</h3>
				<h6>Ad Soyad: @ad @soyad</h6>
				<h6>Numara: @numara</h6>
				<h6>Mail: @mail </h6>
        <img src="~/images/avatar.jpeg" height="200">
      </div>
      <div class="col-md-4 orta">
        <h3>Duyurular</h3>
        <ol>
          <li>2023 Düzce Üniversitesi Online Kurs Platformu Kayıt Yenileme Duyurusu</li>
          <li>Yabancı Dil Kursları ve Sertifikalar Hakkında</li>
          <li>Uygulama Yapacak Öğrencilerin Evrakları Hakkında</li>
        </ol>
      </div>
      <div class="col-md-4 orta">
        <h3>Bilgilendirme</h3>
        <p>Öğrenci El Kitabı</p>
        <img src="">
        <p>KVKK Bilgilendirme Metni</p>
        <img src="~/images/KVKK.PNG" height="70" class="kvkk">
      </div>
      </div>
    </div>
  </body>
